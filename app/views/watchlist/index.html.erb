<h1>Watchlist</h1>

<div ng-controller="StocksCtrl">

<form>
<select ui-select2= "select20options" ng-model= "newCompany", data-placeholder="Enter the name of the company you're searching for", ng-required="true"></select> 
<option value=""></option>
<option ng-repeat="stock in stocklist" value= ""></option>
</select> 

</form>

<div ng-show="loading" id="loading">
	Loading, please wait. 

</div>

<div ng-show = "error">
	There was a problem with the Yahoo Finance API. Please try again later. 

</div>

<div ng-controller="StocksCtrl"> 

<ul>
	
<li ng-repeat = "stock in stocks"> 

<div id = "symbol">
	

</div>

<div id="name"> 

</div>

<span>Bid:</span>,
<span>Ask:</span>,
<span>Year Low:</span>,
<span>Year High:</span>,

<div id = "links"> 
<a href="" ng-click="updateStock(stock.id, $index)">Update</a>

<a href = "" ng-click="deleteStock(stock.id $index)" id="delete"> Delete </a>

</div>

</li>


</ul>

</div>

